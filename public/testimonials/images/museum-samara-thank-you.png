    <text x="60" y="50" font-family="Arial, sans-serif" font-size="6" fill="#1e40af" text-anchor="middle">
      МИНИСТЕРСТВО ТУРИЗМА
    </text>
    <text x="60" y="58" font-family="Arial, sans-serif" font-size="6" fill="#1e40af" text-anchor="middle">
      САМАРСКОЙ ОБЛАСТИ
    </text>
  </g>
  
  <!-- Year -->
  <text x="200" y="520" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#374151" text-anchor="middle">
    2025
  </text>
</svg>
